# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# AWS Credentials (if using AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region

# Stream Scheduler Configuration
STREAM_SCHEDULER_SLEEP_INTERVAL=60  # Sleep interval between checks in seconds
STREAM_SCHEDULER_BATCH_SIZE=10      # Number of streams to process in parallel
STREAM_SCHEDULER_MAX_RETRIES=3      # Maximum number of retries for failed streams
STREAM_SCHEDULER_RETRY_DELAY=300    # Delay between retries in seconds (5 minutes)

# Articlean Integration
ARTICLEAN_API_KEY=your_articlean_api_key
ARTICLEAN_API_URL=https://api.articlean.com/v1

# Security Settings
CSRF_TRUSTED_ORIGINS=https://localhost,https://127.0.0.1,https://newsloom.io
CSRF_COOKIE_SECURE=1
CSRF_USE_SESSIONS=1

# Channel Layer Settings (for WebSocket support)
CHANNEL_LAYERS_HOST=localhost
CHANNEL_LAYERS_PORT=6379

# Optional Integration Settings
# Uncomment and fill these if you use the respective integrations

# Slack Integration
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_APP_TOKEN=xapp-your-app-token

# Telegram Integration
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token

